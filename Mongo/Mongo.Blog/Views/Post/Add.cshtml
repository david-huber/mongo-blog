@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm(new { Action = "Add" }))
{
    <dl>
        <dt>Name:</dt>
        <dd>@Html.TextBox("UserName", "")</dd>
        <dt>Title</dt>
        <dd>@Html.TextBox("Title", "")</dd>
        <dt>Content</dt>
        <dd>@Html.TextArea("Content", "")</dd>
    </dl>
    
    <input type="submit" value="Add New Post" /> 
}
